{
  "name": "mock-server",
  "version": "1.0.0",
  "description": "This is a mock server app",
  "main": "index.js",
  "scripts": {
    "serve": "yarn remove-dist-folder && yarn ts-to-js && concurrently --kill-others \"yarn watch-ts-to-js\" \"yarn run-server\"",
    "remove-dist-folder": "rimraf dist/",
    "ts-to-js": "tsc",
    "watch-ts-to-js": "tsc -w",
    "run-server": "nodemon dist/server.js"
  },
  "author": "Dan Nahari (dn415q@att.com)",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "nodemon": "^1.18.6"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "concurrently": "^4.1.0",
    "rimraf": "^2.6.3",
    "typescript": "^3.1.6"
  }
}
